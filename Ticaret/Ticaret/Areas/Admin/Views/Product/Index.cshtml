@model Ticaret.Data.ResponseModel.ReturnParameterModel<List<Ticaret.Data.Entities.Product>>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <div class="row mt-1">
        <a asp-action="AddProduct" asp-controller="Product" asp-area="Admin" class="btn btn-primary">Add Product</a>
    </div>


    @if (Model.success == true)
    {

        <table class="table table-sm table-bordered table-hover mt-3">
            <tr>
                <th>Id</th>
                <th>Product Name</th>
                <th>Pic</th>
                <th>Category Name</th>
                <th>Price</th>
                <th>Transactions</th>
            </tr>
            @foreach (var item in Model.Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ProductName</td>
                    <td>@item.FilePic</td>
                    <td>@item.Categories.CategoryName</td>
                    <td>@item.Price</td>
                    <td>
                        <a asp-action="DeleteProduct" asp-controller="Product" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        <a asp-action="UpdateProduct" asp-controller="Product" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                    </td>

                </tr>
            }

        </table>




    }

</body>
</html>