@model Ticaret.Data.ResponseModel.ReturnParameterModel<List<Ticaret.Data.Entities.Category>>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>


    @if (Model.success == true)
    {
        <a asp-action="Index" asp-controller="Home" class="list-group-item list-group-item-action @(ViewBag.CategoryId==null?"active":"" )">
            All Categories
        </a>

        <div class="list-group">
            @foreach (var item in Model.Model)
            {
                <a asp-action="Index" asp-controller="Home" asp-route-categoryId="@item.Id" class="list-group-item list-group-item-action @(ViewBag.CategoryId?.ToString()==item.Id.ToString()?"active":"" )">
                    @item.CategoryName
                </a>
            }

        </div>
    }


</body>
</html>